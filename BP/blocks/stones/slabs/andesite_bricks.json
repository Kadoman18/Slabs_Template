{
	"format_version": "1.21.60",
	"minecraft:block": {
		"description": {
			"identifier": "kado:andesite_bricks_slab",
			"menu_category": {
				"group": "minecraft:itemGroup.name.slab",
				"category": "construction"
			},
			"traits": {
				"minecraft:placement_position": {
					"enabled_states": ["minecraft:vertical_half"]
				}
			},
			"states": {
				"kado:double": [false, true],
				"kado:waterlogged": [false, true]
			}
		},
		"components": {
			"kado:slab": {},
			"tag:kado:slab": {},
			"minecraft:material_instances": {
				"*": {
					"texture": "andesite_bricks"
				}
			},
			"minecraft:geometry": {
				"identifier": "geometry.slab",
				"bone_visibility": {
					"bottom_slab": "q.block_state('minecraft:vertical_half') == 'bottom'",
					"top_slab": "q.block_state('minecraft:vertical_half') == 'top'"
				}
			},
			"minecraft:light_dampening": 0,
			"tag:minecraft:is_pickaxe_item_destructible": {},
			"tag:minecraft:stone_tier_destructible": {},
			"minecraft:destructible_by_mining": {
				"seconds_to_destroy": 7.5,
				"item_specific_speeds": [
					{ "item": "wooden_pickaxe", "destroy_speed": 1.15 },
					{ "item": "stone_pickaxe", "destroy_speed": 0.6 },
					{ "item": "iron_pickaxe", "destroy_speed": 0.4 },
					{ "item": "diamond_pickaxe", "destroy_speed": 0.3 },
					{ "item": "netherite_pickaxe", "destroy_speed": 0.25 },
					{ "item": "golden_pickaxe", "destroy_speed": 0.2 }
				]
			}
		},
		"permutations": [
			// Bottom Slab
			{
				"condition": "q.block_state('minecraft:vertical_half') == 'bottom' && !q.block_state('kado:double')",
				"components": {
					"minecraft:liquid_detection": {
						"detection_rules": [
							{
								"can_contain_liquid": true,
								"stops_liquid_flowing_from_direction": ["down"]
							}
						]
					},
					"minecraft:collision_box": {
						"origin": [-8, 0, -8],
						"size": [16, 8, 16]
					},
					"minecraft:selection_box": {
						"origin": [-8, 0, -8],
						"size": [16, 8, 16]
					}
				}
			},
			// Top Slab
			{
				"condition": "q.block_state('minecraft:vertical_half') == 'top' && !q.block_state('kado:double')",
				"components": {
					"minecraft:liquid_detection": {
						"detection_rules": [
							{
								"can_contain_liquid": true,
								"stops_liquid_flowing_from_direction": ["up"]
							}
						]
					},
					"minecraft:collision_box": {
						"origin": [-8, 8, -8],
						"size": [16, 8, 16]
					},
					"minecraft:selection_box": {
						"origin": [-8, 8, -8],
						"size": [16, 8, 16]
					}
				}
			},
			// Double Slab
			{
				"condition": "q.block_state('kado:double')",
				"components": {
					"minecraft:geometry": "minecraft:geometry.full_block",
					"minecraft:loot": "loot_tables/blocks/double_slabs/andesite_bricks.json"
				}
			}
		]
	}
}
